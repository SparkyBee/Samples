@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reports";
}
<script src="../../Scripts/jquery-1.7.2-vsdoc.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.7.2.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.chained.js" type="text/javascript"></script>
<script type="text/javascript">



    $(function () {

        $("#StartDate").datepicker({
            changeMonth: true,
            changeYear: true
        });

        $("#EndDate").datepicker({
            changeMonth: true,
            changeYear: true
        });

    });
</script>
<form class="well" action="Report/Details/" method="post">

    <h3>Select Report</h3>
    <div class="controls">
        <label class="radio padBottom">
            <input name="id" value="2" id="r2" type="radio" checked="checked"><span class="labelInline"><h4>For Global Compliance Follow Up</h4></span>
        </label>
        <br />
        <div class="rptBorder shiftRight">
            <label>
                <h4>Select for Company for Pending Reports.</h4> 
                    <select id="Employer" name="Employer">
                        <option value="All" selected>All</option>
                        @foreach (var emp in ViewBag.EmpList)
                        { 
                            <option value ="@emp">@emp</option>
                        }
                    </select>
            </label>
            <label class="">
                <input name="id" value="3" id="r3" type="radio"><span class="labelInline padEnd padFront">Pending Governing Agency</span>
            
                <input name="id" value="4" id="r4" type="radio"><span class="labelInline padEnd padFront">Pending Global Compliance</span>
            </label>

        </div>
        <label class="radio padBottom" style="padding-top: 12px;">
            <input name="id" value="1" id="r1" type="radio">
            <span class="labelInline"><h4>Mailing Labels</h4></span>
        </label>
        
         <div class="radio padBottom">
            <input name="id" value="5" id="r5" type="radio"><span class="labelInline"><h4>Issued Credentials:</h4></span>
      
        <div class="row">
            <div class="span1">&nbsp;</div>
            <div class="span2 ">
                Issued Start Date<br />
                <input id="StartDate" style="width: 90px;" name="StartDate" type="text" value="">
            </div>
            <div class="span4">
                Issued End Date<br />
                <input id="EndDate" style="width: 90px;" name="EndDate" type="text" value="">
                <br />
            </div>
        </div>
  </div>
        </div>
    <div class="rptBorder">
        <label class="radio">           
                <label>
                    <h4>Select for Company & Rig for status Reports.</h4>                 
                                <select id="EmpRig" name="EmpRig">
                                    <option value="All" selected>All</option>
                                    @foreach (var er in ViewBag.EmpRigs)
                                    { 
                                        <option value ="@er.EmpRig">@er.EmpRig</option>
                                    }
                                </select>
                </label>
            
        </label>
        <div class="shiftRight ">
            <input style="margin-top: 10px;" name="id" value="6" id="r6" type="radio" /><span class="labelInline padEnd padFront"> All Pending</span>
            <input style="margin-top: 10px;" name="id" value="7" id="r7" type="radio" /><span class="labelInline padEnd padFront"> Pending Governing</span>
            <input style="margin-top: 10px;" name="id" value="8" id="r8" type="radio" /><span class="labelInline padEnd padFront"> Pending GC</span><br />
            <input style="margin-top: 10px;" name="id" value="9" id="r9" type="radio" /><span class="labelInline padEnd padFront"> All Pending & Non-Pending</span>
        </div>
    </div>
    <br />
         
            <label>Report font size: </label>
            <label class="radio inline">
                <input name="fonttype" value="0" id="ft1" type="radio" checked><span class="labelInline">Normal Font</span>
            </label>
            <label class="radio inline ">
                <input name="fonttype" value="1" id="ft2" type="radio"><span class="labelInline">Small Font</span>
            </label>
        <br />

        <button type="submit" class="btn">Generate Report</button>

        <br />
        <br />
        <br />
    
</form>
