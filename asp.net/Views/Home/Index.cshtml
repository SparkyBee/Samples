                        </tr>*@
                        
                        <tr>
                            <a href="Info/Details/@item.MarinerID">
                              
                                <td><a href="Info/Details/@item.MarinerID">@item.Fullname</a></td>
                                <td><a href="Info/Details/@item.MarinerID">@item.DOB</a></td>
                                <td><a href="Info/Details/@item.MarinerID">@item.CompanyName</a></td>
                                <td><a href="Info/Details/@item.MarinerID">@item.Location</a></td>
                            </a>
                        </tr>
                        
                    }

