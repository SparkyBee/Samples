@model Intranet.Models.MarinerResult
@{    
    if (Request.QueryString["layout"] == "fluid")
    {
        ViewBag.Title = "Mariner Information Center";
        ViewBag.Message = "Bootstrap Fluid Layout";
        Layout = "~/Views/Shared/_LayoutFluid.cshtml";
    }
    else
    {
        ViewBag.Title = "Mariner Information Center";
        ViewBag.Message = "Bootstrap Standard Layout";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<script src="../../Scripts/jquery-1.7.2-vsdoc.js" type="text/javascript"></script>
