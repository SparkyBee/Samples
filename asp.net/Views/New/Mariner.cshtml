<script src="../../Scripts/jquery.chained.js" type="text/javascript"></script>

<script type="text/javascript">

    $(function () {

        $("#toggleMsg").attr("data-flag", "true");

        $("#addButton").click(function () {
            $("#toggleMsg").attr("data-flag", "false");
        });

        $("#LicenseType").chained("#CountryType");

        $("#DateOfBirth").datepicker({
            changeMonth: true,
            changeYear: true
        });

     

        $(document).keyup(function () {
            $("#addButton").addClass("btn-warning");
            $("#addButton").addClass("btn-large");
        });

    });


    window.onbeforeunload = function () {
        var test = $("#toggleMsg").attr("data-flag");
        if (test == "true") {
            return "Are you sure you want to navigate away? The information has not been saved.";
        }
    }


</script>
